<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= @community_group.name %> Chatroom</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
  <style>
  .chatbox {
    height: 450px;
  }
  </style>
</head>
<body>
  <div class="ui container" style="margin-top: 20px;">
    <!-- Header Section -->
    <header class="ui center aligned segment">
      <h4 class="ui center aligned medium icon header">
        <!-- Custom Icon -->
        <%= image_tag '/saved_icon.png', alt: 'Custom Icon', class: 'ui circular image', style: 'width: 100px; height: 100px; display: block; margin: 0 auto;' %>

        <!-- Styled Community Group Name -->
        <div style="font-size: 24px; font-weight: bold; margin-top: 10px;">
          <%= @community_group.name %>
        </div>
      </h4>
    </header>


    <!-- Main Content -->
    <div class="ui stackable two column grid">
      <!-- Activity Feed -->
      <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
          <div class="content">
            <h4 class="ui header">Messages</h4>
            <div class="ui small feed" id="messages" data-community-group-id="<%= @community_group.id %>">
              <%= render @messages %>
            </div>
          </div>
          <div class="extra content">
            <%= form_with(model: [@community_group, Message.new], local: true, html: { class: "ui reply form" }) do |f| %>
              <div class="field">
                <div class="ui fluid icon input">
                  <%= f.text_field :body, placeholder: "Type your message here..." %>
                  <%= f.button '<i class="purple paper plane icon"></i>'.html_safe %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="four wide column">
        <div class="ui raised card">
          <div class="content">
            <h4 class="ui header">Other Chatrooms</h4>
            <div class="ui list">
              <% @other_chatrooms.each do |chatroom| %>
                <div class="item">
                  <i class="comments outline icon"></i>
                  <div class="content">
                    <%= link_to chatroom.name, community_group_path(chatroom), class: "ui link" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
  document.addEventListener("DOMContentLoaded", () => {
    const messageInput = document.querySelector("input[name='message[body]']");
    const messageForm = document.querySelector("form.ui.reply.form");

    if (messageInput && messageForm) {
      messageInput.addEventListener("keydown", (event) => {
        if (event.key === "Enter" && !event.shiftKey) {
          event.preventDefault(); // Varsayılan Enter davranışını engelle
          messageForm.submit(); // Formu gönder
        }
      });
    }
  });
</script>

</body>
</html>
