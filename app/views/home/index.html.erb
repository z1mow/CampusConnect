<div style="text-align: center; margin: 20px;">
  <!-- Başlık -->
  <h1 style="font-family: Arial, sans-serif; font-size: 28px; color: #231f20;"></h1>

  <!-- Arka Plan Görseli -->
  <div style="background-image: url(<%= asset_path('background9.png') %>); background-size: cover; background-position: center; position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;"></div>

  <!-- Logo ve Merkez Resim -->
  <div style="margin: 0 auto; position: relative; width: 400px; height: 400px;">
    <div style="position: absolute; top: -5%; left: 50%; transform: translate(-50%, 0%);">
      <%= image_tag("background5.jpeg", alt: "Website Logo", size: "150x150", style: "border-radius: 50%; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);") %>
    </div>

    <!-- Konuşma Balonları -->
    <!-- Kadın Hakları Grubu -->
    <div class="speech-bubble-left kadin-haklari" style="position: absolute; top: 39%; right: 70%; transform: translate(50%, 0);">
      <%= link_to community_group_path(@default_groups[0]), style: "text-decoration: none; color: inherit;" do %>
        <h3><%= @default_groups[0].name %></h3>
      <% end %>
      <div class="speech-bubble-triangle"></div>
    </div>

    <!-- Hayvan Hakları Grubu -->
    <div class="speech-bubble-right hayvan-haklari" style="position: absolute; top: 59%; left: -30%; transform: translate(50%, 0);">
      <%= link_to community_group_path(@default_groups[1]), style: "text-decoration: none; color: inherit;" do %>
        <h3><%= @default_groups[1].name %></h3>
      <% end %>
      <div class="speech-bubble-triangle"></div>
    </div>

    <!-- Okul Hakkında Şikayet -->
    <div class="speech-bubble-right okul-sikayet" style="position: absolute; top: 99%; left: -30%; transform: translate(50%, 0);">
      <%= link_to community_group_path(@default_groups[2]), style: "text-decoration: none; color: inherit;" do %>
        <h3><%= @default_groups[2].name %></h3>
      <% end %>
      <div class="speech-bubble-triangle"></div>
    </div>

    <!-- İnsan Hakları Grubu -->
    <div class="speech-bubble-left insan-haklari" style="position: absolute; top: 79%; right: 70%; transform: translate(50%, 0);">
      <%= link_to community_group_path(@default_groups[3]), style: "text-decoration: none; color: inherit;" do %>
        <h3><%= @default_groups[3].name %></h3>
      <% end %>
      <div class="speech-bubble-triangle"></div>
    </div>

    <!-- Diğer Gruplar -->
    <div class="speech-bubble-left diger-gruplar" style="position: absolute; top: 119%; right: 70%; transform: translate(50%, 0%);">
      <%= link_to community_groups_path, style: "text-decoration: none; color: inherit;" do %>
        <h3>Diğer Gruplar</h3>
      <% end %>
      <div class="speech-bubble-triangle"></div>
    </div>

    <!-- Oluştur Butonu -->
    <div class="speech-bubble-right olustur" style="position: absolute; top: 139%; left: -30%; transform: translate(50%, 0%);">
      <%= link_to new_community_group_path, style: "text-decoration: none; color: inherit;" do %>
        <h3>Oluştur</h3>
      <% end %>
      <div class="speech-bubble-triangle"></div>
    </div>
  </div>
</div>