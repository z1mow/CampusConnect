<div class="ui container">
  <div class="ui segment">
    <div class="ui grid">
      <div class="sixteen wide column">
        <h2 class="ui header">
          <i class="bell icon"></i>
          <div class="content">
            Bildirimler
            <div class="sub header">Tüm bildirimleriniz</div>
          </div>
        </h2>
      </div>
    </div>

    <div class="ui divider"></div>

    <% if @notifications.any? %>
      <div class="ui relaxed divided list">
        <%= render partial: 'notifications/notification', collection: @notifications %>
      </div>
      
      <div class="ui center aligned container" style="margin-top: 2rem;">
        <%= paginate @notifications %>
      </div>
    <% else %>
      <div class="ui placeholder segment">
        <div class="ui icon header">
          <i class="bell slash outline icon"></i>
          Henüz bildiriminiz yok
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
.ui.segment {
  box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
  border: none;
  border-radius: 12px;
}

.ui.header {
  margin-bottom: 1rem;
}

.ui.header .icon {
  color: #8A2BE2;
}

.ui.divider {
  margin: 1.5rem 0;
}

.ui.placeholder.segment {
  background: #f8f9fa;
  border: 2px dashed #dee2e6;
}

.ui.placeholder.segment .icon.header {
  color: #6c757d;
}

.ui.placeholder.segment .icon.header i {
  margin-bottom: 1rem;
}
</style> 