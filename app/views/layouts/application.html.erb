<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Campus Connect" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>


    <!-- Additional Head Content -->
    <%= yield :head %>

    <!-- Semantic UI CSS CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <%= javascript_pack_tag "application", "data-turbo-track": "reload" %>

    <!-- Diğer başlık öğeleri -->
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <style>
      .chatbox {
        height: 450px;
      }
      .navbar {
        background: rgba(255, 255, 255, 0.95) !important;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1) !important;
        padding: 1rem 0 !important;
        margin-bottom: 2rem !important;
      }
      .navbar .item {
        color: #2c3e50 !important;
      }
      .navbar .item:hover {
        color: #00B5AD !important;
      }
      .navbar .header.item {
        font-weight: bold !important;
      }
      .navbar .primary.button {
        background: linear-gradient(135deg, #00B5AD 0%, #009c95 100%) !important;
        color: white !important;
        transition: transform 0.2s !important;
      }
      .navbar .primary.button:hover {
        transform: translateY(-2px);
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <div class="ui large menu navbar">
      <div class="ui container">
        <%= link_to root_path, class: "header item" do %>
          <i class="graduation cap icon"></i>
          CampusConnect
        <% end %>
        <%= link_to chatroom_path, class: "item" do %>
          <i class="comments icon"></i>
          Chatroom
        <% end %>
        <%= link_to messages_path, class: "item" do %>
          <i class="envelope icon"></i>
          Messages
        <% end %>
        <div class="right menu">
          <% if logged_in? %>
            <div class="item">
              <%= link_to account_path, class: "ui dropdown" do %>
                <i class="user circle icon"></i>
                Account
              <% end %>
            </div>
            <div class="item">
              <%= link_to logout_path, class: "ui button" do %>
                <i class="sign out icon"></i>
                Logout
              <% end %>
            </div>
          <% else %>
            <% unless current_page?(login_path) %>
              <div class="item">
                <%= link_to login_path, class: "ui button" do %>
                  <i class="sign in icon"></i>
                  Sign In
                <% end %>
              </div>
            <% end %>
            <div class="item">
              <%= link_to new_user_path, class: "ui primary button" do %>
                <i class="user plus icon"></i>
                Sign Up
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="ui container">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
    <script>
      scroll_bottom = function() {
        if ($('#messages').length > 0) {
          $('#messages').scrollTop($('#messages')[0].scrollHeight);
        }
      }

      submit_message = function() {
        $('#message_body').on('keydown', function(e) {
          if (e.keyCode == 13) {
            $('button').click();
            e.target.value = "";
          };
        });
      };

      $(document).ready(function() {
        $('.ui.dropdown').dropdown();
        $('.message .close').on('click', function() {
          $(this).closest('.message').transition('fade');
        });
        submit_message();
        scroll_bottom();
      });
    </script>
  </body>
</html>