<div class="profile-container">
  <div class="profile-header">
    <div class="profile-avatar">
      <% if @profile_data[:profile_picture_attached] %>
        <%= image_tag @user.profile_picture %>
      <% else %>
        <i class="huge user circle icon"></i>
      <% end %>
    </div>
    
    <div class="profile-info">
      <h1 class="profile-name"><%= @profile_data[:name] %></h1>
      <div class="profile-username">@<%= @profile_data[:username] %></div>

      <% if @user != current_user %>
        <div class="friend-actions">
          <% if @is_friend %>
            <%= button_to remove_friend_user_path(@user), method: :delete, class: "ui red button", data: { confirm: "Arkadaşlıktan çıkarmak istediğinize emin misiniz?" } do %>
              <i class="user times icon"></i> Arkadaşlıktan Çıkar
            <% end %>
          <% elsif @pending_request %>
            <% if @pending_request.friend_id == current_user.id %>
              <div class="ui buttons">
                <%= button_to accept_friend_request_user_path(@user), method: :post, class: "ui positive button" do %>
                  <i class="check icon"></i> Kabul Et
                <% end %>
                <%= button_to reject_friend_request_user_path(@user), method: :post, class: "ui negative button" do %>
                  <i class="times icon"></i> Reddet
                <% end %>
              </div>
            <% else %>
              <button class="ui basic button" disabled>
                <i class="clock icon"></i> İstek Gönderildi
              </button>
            <% end %>
          <% elsif @can_send_request %>
            <%= button_to send_friend_request_user_path(@user), method: :post, class: "ui primary button" do %>
              <i class="user plus icon"></i> Arkadaş Ekle
            <% end %>
          <% end %>
        </div>
      <% end %>

      <div class="profile-stats">
        <div class="stat-item">
          <i class="users icon"></i>
          <%= pluralize(@community_groups.count, 'Topluluk') %>
        </div>
        <div class="stat-item">
          <i class="user friends icon"></i>
          <%= pluralize(@user.friends.count, 'Arkadaş') %>
        </div>
      </div>
    </div>
  </div>

  <div class="profile-groups">
    <h2>
      <i class="users icon"></i>
      Üye Olduğu Topluluklar
    </h2>
    
    <div class="groups-grid">
      <% @community_groups.each do |group| %>
        <%= link_to community_group_path(group), class: "group-card" do %>
          <div class="group-name">
            <i class="users icon"></i>
            <%= group.name %>
          </div>
          <div class="group-meta">
            <span>
              <i class="user icon"></i>
              <%= group.users.count %> üye
            </span>
            <% if group.creator == @user %>
              <span class="creator-badge">Kurucu</span>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<style>
