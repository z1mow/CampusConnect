<div class="profile-container">
  <div class="profile-header">
    <div class="profile-avatar">
      <% if @user.profile_picture.attached? %>
        <%= image_tag @user.profile_picture %>
      <% else %>
        <i class="huge user circle icon"></i>
      <% end %>
    </div>
    
    <div class="profile-info">
      <h1 class="profile-name"><%= @user.name %></h1>
      <div class="profile-username">@<%= @user.username %></div>
      
      <div class="profile-details">
        <% if @user.department.present? %>
          <div class="detail-item">
            <i class="building icon"></i>
            <%= @user.department.humanize %>
          </div>
        <% end %>
        
        <% if @user.title.present? %>
          <div class="detail-item">
            <i class="id badge icon"></i>
            <%= @user.title.humanize %>
          </div>
        <% end %>
        
        <% if @user.student_class.present? %>
          <div class="detail-item">
            <i class="graduation cap icon"></i>
            <%= @user.student_class %> Sınıf
          </div>
        <% end %>
      </div>

      <% if @user == current_user %>
        <%= link_to edit_user_path(@user), class: "edit-profile-btn" do %>
          <i class="edit icon"></i>
          Profili Düzenle
        <% end %>
      <% end %>

      <% if @user != current_user %>
        <div class="friend-actions">
          <% if @is_friend %>
            <div class="ui buttons">
              <%= button_to remove_friend_user_path(@user), method: :delete, class: "ui red button", data: { confirm: "Arkadaşlıktan çıkarmak istediğinize emin misiniz?" } do %>
                <i class="user times icon"></i> Arkadaşlıktan Çıkar
              <% end %>
              <%= link_to chat_user_path(@user), class: "ui primary button" do %>
                <i class="comment icon"></i> Mesaj Gönder
              <% end %>
            </div>
          <% elsif @pending_request %>
            <% if @pending_request.friend_id == current_user.id %>
              <div class="ui buttons">
                <%= button_to accept_friend_request_user_path(@user), method: :post, class: "ui positive button" do %>
                  <i class="check icon"></i> Kabul Et
                <% end %>
                <%= button_to reject_friend_request_user_path(@user), method: :post, class: "ui negative button" do %>
                  <i class="times icon"></i> Reddet
                <% end %>
              </div>
            <% else %>
              <button class="ui basic button" disabled>
                <i class="clock icon"></i> İstek Gönderildi
              </button>
            <% end %>
          <% elsif @can_send_request %>
            <%= button_to send_friend_request_user_path(@user), method: :post, class: "ui primary button" do %>
              <i class="user plus icon"></i> Arkadaş Ekle
            <% end %>
          <% end %>
        </div>
      <% end %>

      <div class="profile-stats">
        <div class="stat-item">
          <i class="users icon"></i>
          <%= pluralize(@community_groups.count, 'Topluluk') %>
        </div>
        <div class="stat-item">
          <i class="user friends icon"></i>
          <%= pluralize(@user.friends.count, 'Arkadaş') %>
        </div>
      </div>
    </div>
  </div>

  <div class="profile-groups">
    <h2>
      <i class="users icon"></i>
      Üye Olduğu Topluluklar
    </h2>
    
    <div class="groups-grid">
      <% @community_groups.each do |group| %>
        <%= link_to community_group_path(group), class: "group-card" do %>
          <div class="group-name">
            <i class="users icon"></i>
            <%= group.name %>
          </div>
          <div class="group-meta">
            <span>
              <i class="user icon"></i>
              <%= group.users.count %> üye
            </span>
            <% if group.creator == @user %>
              <span class="creator-badge">Kurucu</span>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<style>
/* Container Styles */
.profile-container {
  max-width: 800px;
  margin: 20px auto;
  padding: 1rem;
}

/* Header Styles */
.profile-header {
  background: white;
  border-radius: 12px;
  padding: 2rem;
  display: flex;
  gap: 2rem;
  align-items: center;
  box-shadow: 0 4px 16px rgba(31, 38, 135, 0.07);
}

/* Avatar Styles */
.profile-avatar {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  color: #8A2BE2;
}

.profile-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Profile Info Styles */
.profile-info {
  flex: 1;
}

.profile-name {
  color: #2c3e50;
  font-size: 1.8em;
  margin-bottom: 0.3rem;
}

.profile-username {
  color: #7f8c8d;
  font-size: 1.1em;
  margin-bottom: 1rem;
}

/* Profile Details Styles */
.profile-details {
  margin-bottom: 1rem;
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #636e72;
  font-size: 0.95em;
  background: rgba(0, 181, 173, 0.1);
  padding: 0.4rem 0.8rem;
  border-radius: 4px;
}

.detail-item i {
  color: #8A2BE2;
}

/* Stats Styles */
.profile-stats {
  display: flex;
  gap: 1.5rem;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #95a5a6;
}

.stat-item i {
  color: #8A2BE2;
}

/* Groups Section Styles */
.profile-groups {
  background: white;
  border-radius: 12px;
  padding: 2rem;
  margin-top: 1.5rem;
  box-shadow: 0 4px 16px rgba(31, 38, 135, 0.07);
}

.profile-groups h2 {
  color: #2c3e50;
  font-size: 1.5em;
  margin-bottom: 1.5rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.profile-groups h2 i {
  color: #8A2BE2;
}

.groups-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 1rem;
}

/* Group Card Styles */
.group-card {
  background: #f8f9fa;
  padding: 1rem;
  border-radius: 8px;
  transition: all 0.2s ease;
  text-decoration: none;
  color: inherit;
}

.group-card:hover {
  transform: translateY(-2px);
  background: #f1f2f3;
  text-decoration: none;
  color: inherit;
}

.group-name {
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 0.5rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.group-name i {
  color: #8A2BE2;
}

.group-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #95a5a6;
  font-size: 0.9em;
}

.group-meta span {
  display: flex;
  align-items: center;
  gap: 0.3rem;
}

/* Badge Styles */
.creator-badge {
  background: rgba(0, 181, 173, 0.1);
  color: #8A2BE2;
  padding: 0.2rem 0.5rem;
  border-radius: 4px;
  font-size: 0.8em;
}

/* Button Styles */
.edit-profile-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background: #8A2BE2;
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 6px;
  text-decoration: none;
  margin-bottom: 1rem;
  transition: background 0.2s ease;
}

.edit-profile-btn:hover {
  background: #009c94;
  color: white;
  text-decoration: none;
}

/* Friend Actions Styles */
.friend-actions {
  margin: 1rem 0;
}

.friend-actions .ui.button {
  margin-right: 0.5rem;
}

.friend-actions .ui.buttons {
  display: flex;
  gap: 0.5rem;
}

.friend-actions .ui.button i {
  margin-right: 0.5rem;
}

.friend-actions .ui.basic.button:disabled {
  opacity: 1 !important;
  background: #f8f9fa !important;
  color: #95a5a6 !important;
}
</style>